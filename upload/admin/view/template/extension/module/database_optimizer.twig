{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if success %}
        <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}</div>
        {% endif %}
        {% if table_results %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-table"></i> Database Health Results</h3>
            </div>
            <div class="panel-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Table Name</th>
                            <th>Status</th>
                            <th>Repaired</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for result in table_results %}
                        <tr>
                            <td>{{ result.table }}</td>
                            <td>{{ result.status }}</td>
                            <td>{{ result.repaired ? 'Yes' : 'No' }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-cogs"></i> {{ heading_title }}</h3>
            </div>
            <div class="panel-body">
                <a href="{{ action_optimize }}" class="btn btn-primary">{{ button_optimize }}</a>
                <a href="{{ action_clear_sessions }}" class="btn btn-warning">{{ button_clear_sessions }}</a>
                <a href="{{ action_clear_cache }}" class="btn btn-danger">{{ button_clear_cache }}</a>
                <a href="{{ action_check_tables }}" class="btn btn-info">{{ button_check_tables }}</a>
            </div>
        </div>
    </div>
</div>
{{ footer }}